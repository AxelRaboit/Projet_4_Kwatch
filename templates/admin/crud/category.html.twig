{% extends 'base.html.twig' %}

{% block title %}Catégories - Administration{% endblock %}

{% block body %}
    <div class="containerItemList">
        <h1 class="listAdminTitle">Liste des Categories</h1>

        {% for category in categories %}
            <div class="containerListCards">
                <div class="containerListItem">
                    <div class="itemListLabel">Id</div>
                    <div class="itemListContent">{{category.id}}</div>
                </div>
                <hr>
                <div class="containerListItem">
                    <div class="itemListLabel">Nom</div>
                    <div class="itemListContent">{{category.name}}</div>
                </div>
                <hr>
                <div class="containerListItem">
                    <div class="itemListLabel">Actions</div>
                    <div class="containerListItemButtons">
                        <a class="itemListContentButtons" href="{{ path('category_show', {'id': category.id}) }}">Voir</a>
                        <a class="itemListContentButtons" href="{{ path('category_edit', {'id': category.id}) }}">Modifier</a>
                    </div>
                </div>
            </div>
        {% else %}
            <p>Aucun résultat</p>        
        {% endfor %}
    </div>
    <div class="containerPagination">
        {% do categories.setPageRange(2) %}
        {{ knp_pagination_render(categories, 'pagination.html.twig') }}
    </div>
{% endblock %}