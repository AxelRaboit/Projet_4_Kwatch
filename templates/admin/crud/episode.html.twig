{% extends 'base.html.twig' %}

{% block title %}Episodes - Administration{% endblock %}

{% block body %}
    <div class="containerItemList">
        <h1 class="listAdminTitle">Liste des Episodes</h1>

        {% for episode in episodes %}
            <div class="containerListCards">
                <div class="containerListItem">
                    <div class="itemListLabel">Id</div>
                    <div class="itemListContent">{{episode.id}}</div>
                </div>
                <hr>
                <div class="containerListItem">
                    <div class="itemListLabel">Titre</div>
                    <div class="itemListContent">{{episode.title}}</div>
                </div>
                <hr>
                <div class="containerListItem">
                    <div class="itemListLabel">Numéro</div>
                    <div class="itemListContent">{{episode.number}}</div>
                </div>
                <hr>
                <div class="containerListItem">
                    <div class="itemListLabel">Sommaire</div>
                    <div class="itemListContent">{{episode.summary}}</div>
                </div>
                <hr>
                <div class="containerListItem">
                    <div class="itemListLabel">Affiche</div>
                    <div class="itemListContent">{{ asset('uploads/' ~ episode.image) }}</div>
                </div>
                <hr>
                <div class="containerListItem">
                    <div class="itemListLabel">Actions</div>
                    <div class="containerListItemButtons">
                        <a class="itemListContentButtons" href="{{ path('episode_show', {'id': episode.id}) }}">Voir</a>
                        <a class="itemListContentButtons" href="{{ path('episode_edit', {'id': episode.id}) }}">Modifier</a>
                    </div>
                </div>
            </div>
        {% else %}
            <p>Aucun résultat</p>        
        {% endfor %}
    </div>
    <div class="containerPagination">
        {% do episodes.setPageRange(2) %}
        {{ knp_pagination_render(episodes, 'pagination.html.twig') }}
    </div>
{% endblock %}
