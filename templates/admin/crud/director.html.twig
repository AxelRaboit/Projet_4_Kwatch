{% extends 'base.html.twig' %}

{% block title %}Réalisateurs - Administration{% endblock %}

{% block body %}
    <div class="containerItemList">
        <h1 class="listAdminTitle">Liste des réalisateurs</h1>

        {% for director in directors %}
            <div class="containerListCards">
                <div class="containerListItem">
                    <div class="itemListLabel">Id</div>
                    <div class="itemListContent">{{director.id}}</div>
                </div>
                <hr>
                <div class="containerListItem">
                    <div class="itemListLabel">Nom</div>
                    <div class="itemListContent">{{director.name}}</div>
                </div>
                <hr>
                <div class="containerListItem">
                    <div class="itemListLabel">Image</div>
                    <div class="itemListContent">{{director.picture}}</div>
                </div>
                <hr>
                <div class="containerListItem">
                    <div class="itemListLabel">Nationalité</div>
                    <div class="itemListContent">{{director.nationality}}</div>
                </div>
                <hr>
                <div class="containerListItem">
                    <div class="itemListLabel">Description</div>
                    <div class="itemListContent">{{director.description}}</div>
                </div>
                <hr>
                <div class="containerListItem">
                    <div class="itemListLabel">Actions</div>
                    <div class="containerListItemButtons">
                        <a class="itemListContentButtons" href="{{ path('director_show', {'directorSlug': director.slug}) }}">Voir</a>
                        <a class="itemListContentButtons" href="{{ path('director_edit', {'directorSlug': director.slug}) }}">Modifier</a>
                    </div>
                </div>
            </div>
        {% else %}
            <p>Aucun résultat</p>        
        {% endfor %}
    </div>
    <div class="containerPagination">
        {% do directors.setPageRange(2) %}
        {{ knp_pagination_render(directors, 'pagination.html.twig') }}
    </div>
{% endblock %}
