{% extends 'base.html.twig' %}

{% block title %}Séries - Administration{% endblock %}

{% block body %}
    <div class="containerItemList">
        <h1 class="listAdminTitle">Liste des Séries</h1>

        {% for program in programs %}
            <div class="containerListCards">
                <div class="containerListItem">
                    <div class="itemListLabel">Id</div>
                    <div class="itemListContent">{{program.id}}</div>
                </div>
                <hr>
                <div class="containerListItem">
                    <div class="itemListLabel">Titre</div>
                    <div class="itemListContent">{{program.title}}</div>
                </div>
                <hr>
                <div class="containerListItem">
                    <div class="itemListLabel">Categorie</div>
                    <div class="itemListContent">{{program.category}}</div>
                </div>
                <hr>
                <div class="containerListItem">
                    <div class="itemListLabel">Synopsis</div>
                    <div class="itemListContent">{{program.synopsis}}</div>
                </div>
                <hr>
                <div class="containerListItem">
                    <div class="itemListLabel">Pays</div>
                    <div class="itemListContent">{{program.country}}</div>
                </div>
                <hr>
                <div class="containerListItem">
                    <div class="itemListLabel">Affiche</div>
                    <div class="itemListContent">{{program.poster}}</div>
                </div>
                <hr>
                <div class="containerListItem">
                    <div class="itemListLabel">Slug</div>
                    <div class="itemListContent">{{program.slug}}</div>
                </div>
                <hr>
                <div class="containerListItem">
                    <div class="itemListLabel">Actions</div>
                    <div class="containerListItemButtons">
                        <a class="itemListContentButtons" href="{{ path('program_show', {'slug': program.slug}) }}">Voir</a>
                        <a class="itemListContentButtons" href="{{ path('program_edit', {'id': program.id}) }}">Modifier</a>
                    </div>
                </div>
            </div>
        {% else %}
            <p>Aucun résultat</p>        
        {% endfor %}
    </div>
{% endblock %}
