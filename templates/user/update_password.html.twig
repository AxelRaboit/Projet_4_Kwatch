{% extends "base.html.twig" %}

{% block title %}Modification du mot de passe | {{ parent() }}{% endblock %}

{% block body %}
<h1 class="updatePasswordTitle">Modifier le mot de passe</h1>
<div class="backgroundUpdatePasswordForm">
    {{ form_start(form) }}
    <div class="containerUpdatePasswordForm">
        <div class="updatePasswordItemForm">
            {{ form_row(form.oldPassword) }}
        </div>
         <div class="updatePasswordItemForm">
            {{ form_row(form.plainPassword) }}
        </div>
        <div class="updatePasswordItemForm">
            {{ form_row(form.submit) }}
        </div>
        {{ form_end(form) }}
        <a class="backButtonUpdatePassword" href="{{ path('user_profile', {'id': user.id}) }}">Retour</a>
    </div>
</div>
{% endblock %}


