{% extends 'base.html.twig' %}

{% block title %}Séries - Administration{% endblock %}

{% block body %}
    <h1>Séries</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Category</th>
                <th>Summary</th>
                <th>Poster</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for program in programs %}
            <tr>
                <td>{{ program.id }}</td>
                <td>{{ program.title }}</td>
                <td>{{ program.category }}</td>
                <td>{{ program.synopsis }}</td>
                <td>{{ program.poster }}</td>
                <td>{{ program.slug }}</td>
                <td>
                    <a href="{{ path('program_show', {'slug': program.slug}) }}">show</a>
                    <a href="{{ path('program_edit', {'id': program.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
