{% extends 'base.html.twig' %}

{% block title %}Séries - {{ parent() }}{% endblock %}

{% block body %}
    <h1>Toutes les séries: </h1>
    {% for program in programs %}
        <div>
            <h2>{{ program.title }} - Catégorie: {{ program.category.name }}</h2>
            <p>{{ program.synopsis }}</p>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}
