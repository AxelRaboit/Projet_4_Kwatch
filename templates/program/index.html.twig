{% extends 'base.html.twig' %}

{% block title %}Séries - {{ parent() }}{% endblock %}

{% block body %}
    <div class="containerProgramsPage">
        <h1>Toutes les séries: </h1>
        {% for program in programs %}
            <div>
                <h2>{{ program.title }} - Catégorie: {{ program.category.name }}</h2>
                <p>{{ program.synopsis }}</p>
                <a href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>
            </div>
        {% else %}
            Aucune série trouvée.
        {% endfor %}
    </div>
{% endblock %}
