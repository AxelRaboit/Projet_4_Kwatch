






{% extends 'base.html.twig' %}

{% block title %}Se connecter - {{ parent() }}{% endblock %}

{% block body %}
<div class="homepageLogin">
    <div class="containerLogin">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="homepageLogin">
            <div class="containerLogin">
                <img class="home-logo" src="{{ asset('/build/images/logo/code.svg') }}" alt="Logo SandBox"/>
                {% if app.user %}
                    <div class="containerAuthButtons">
                        <button class="submitConnexion" type="submit"><a href="{{ path('home') }}">Entrer</a></button>
                    <div class="mb-3">
                        Tu es connecté entant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                    </div>
                        <a class="loggedPageLogoutButton" href="{{ path('app_logout') }}">Se déconnecter</a>
                    </div>
                {% else %}
                    <div class="containerAuthButtons">
                        <button class="submitConnexion" type="submit"><a href="{{ path('app_login') }}">S'identifier</a></button>
                        <a class="subscriptionText" href="{{ path('app_register') }}">Pas encore inscrit ? Créez un compte !</a>
                    </div>
                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                {% endif %}
                {% else %}
                    <h1 class="h3 mb-3 font-weight-normal">Se connecter</h1>
                    <div class="containerLoginInputEmail">
                        <label for="inputEmail">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                    </div>
                    <div class="containerLoginInputPassword">
                        <label for="inputPassword">Mot de passe</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" required>
                    </div>

                    <input type="hidden" name="_csrf_token"
                        value="{{ csrf_token('authenticate') }}"
                    >
                    <button class="submitConnexion" type="submit">
                        Connexion
                    </button>
                {% endif %}
            </div>
        </form>
    </div>
</div>

{% endblock %}
